<p id="notice"><%= notice %></p>

<ul class="navbar navbar-dark bg-primary">
  <li>
    <a class="navbar-brand"  href="#"><%= I18n.t('activerecord.models.sale.other') %></a>
  </li>
</ul>
<%= link_to 'Importar vendas', import_sales_path, method: :get, class: "btn btn-primary" %>
<div class="container">
  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th scope="col"><%= I18n.t('activerecord.attributes.sale.purchaser_id') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.product.description') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.product.price_cents') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.sale.quantity') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.sale.address_id') %></th>
        <th scope="col"><%= I18n.t('activerecord.attributes.sale.provider_id') %></th>
        <th scope="col"></th>
      </tr>
    </thead>

    <tbody>
      <% total = 0 %>
      <% @sales.each do |sale| %>
        <tr>
          <td><%= sale.purchaser.name %></td>
          <td><%= sale.product.description %></td>
          <td><%= sale.product.price %></td>
          <td><%= sale.quantity %></td>
          <td><%= sale.provider.address.street  %></td>
          <td><%= sale.provider.name  %></td>
          <td><%= link_to 'Visualizar', sale %></td>
          <% total += sale.total_price %>
        </tr>
      <% end %>
      <tr>
        <td> Total: </td>
        <td colspan="5"><%= total %> </td>
      </tr>
    </tbody>
  </table>
</div>
